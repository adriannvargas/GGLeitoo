<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    >

    <ImageView
        android:id="@+id/imagen_titulo_pantalla_principal"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/empleabol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagen_logo_app"
        android:layout_width="220dp"
        android:layout_height="260dp"
        android:src="@drawable/trabajos"
        android:contentDescription="Logo central"
        app:layout_constraintTop_toBottomOf="@id/imagen_titulo_pantalla_principal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"/>


    <Button
        android:id="@+id/botton_iniciarsesion"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:text="Iniciar SesiÃ³n"
        android:textSize="26sp"
        android:fontFamily="@font/fileskool"
        android:backgroundTint="@color/verde"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imagen_logo_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/botton_registrarse"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:text="Registrarse"
        android:textSize="26sp"
        android:fontFamily="@font/fileskool"
        android:backgroundTint="@color/azul"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/botton_iniciarsesion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
