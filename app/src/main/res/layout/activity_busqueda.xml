<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/busqueda_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusquedaActivity"
    android:background="@color/beige">

    <ImageView
        android:id="@+id/imagen_empleabol"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:scaleType="fitCenter"
        android:src="@drawable/empleabol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icono_perfil"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/person_button_svgrepo_com"
        app:tint="@color/black" />

    <EditText
        android:id="@+id/edit_text_buscador_trabajos"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/roundededittext"
        android:fontFamily="@font/fileskool"
        android:hint="  Buscar"
        app:layout_constraintEnd_toStartOf="@id/botton_buscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagen_empleabol" />

    <Button
        android:id="@+id/botton_buscar"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/verde"
        android:fontFamily="@font/fileskool"
        android:text="Buscar"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/imagen_empleabol"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_buscador_trabajos"
        app:layout_constraintStart_toEndOf="@id/edit_text_buscador_trabajos"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/botton_filtrar"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/verde"
        android:fontFamily="@font/fileskool"
        android:text="Filtrar"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_buscador_trabajos" />
    <TextView
        android:id="@+id/text_view_salario"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:background="@drawable/roundedlayoutverde"
        android:fontFamily="@font/fileskool"
        android:gravity="center"
        android:text="Salario/Bs:"
        android:textColor="@color/white"
        android:layout_marginStart="35dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/botton_filtrar"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/text_view_salario_2000_5000"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="2000-5000"
        android:background="@drawable/roundedlayoutblanco"
        android:fontFamily="@font/fileskool"
        android:gravity="center"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/botton_filtrar"
        app:layout_constraintStart_toEndOf="@id/text_view_salario"/>
    <TextView
        android:id="@+id/text_view_horario_4"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="4hr"
        android:background="@drawable/roundedlayoutblanco"
        android:fontFamily="@font/fileskool"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/text_view_salario"
        app:layout_constraintStart_toEndOf="@id/text_view_horario"/>
    <TextView
        android:id="@+id/text_view_horario_5"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="5hr"
        android:background="@drawable/roundedlayoutblanco"
        android:fontFamily="@font/fileskool"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/text_view_salario"
        app:layout_constraintStart_toEndOf="@id/text_view_horario_4"/>
    <TextView
        android:id="@+id/text_view_horario_6"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="6hr"
        android:background="@drawable/roundedlayoutblanco"
        android:fontFamily="@font/fileskool"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/text_view_salario"
        app:layout_constraintStart_toEndOf="@id/text_view_horario_5"/>
    <TextView
        android:id="@+id/text_view_horario_7"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="7hr"
        android:background="@drawable/roundedlayoutblanco"
        android:fontFamily="@font/fileskool"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/text_view_salario"
        app:layout_constraintStart_toEndOf="@id/text_view_horario_6"/>
    <TextView
        android:id="@+id/text_view_horario_8"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="8hr"
        android:background="@drawable/roundedlayoutblanco"
        android:fontFamily="@font/fileskool"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/text_view_salario"
        app:layout_constraintStart_toEndOf="@id/text_view_horario_7"/>
    <TextView
        android:id="@+id/text_view_horario_9"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="9hr"
        android:background="@drawable/roundedlayoutblanco"
        android:fontFamily="@font/fileskool"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/text_view_salario"
        app:layout_constraintStart_toEndOf="@id/text_view_horario_8"/>
    <TextView
        android:id="@+id/text_view_salario_5000_8000"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="5000-8000"
        android:background="@drawable/roundedlayoutblanco"
        android:fontFamily="@font/fileskool"
        android:gravity="center"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/text_view_salario_2000_5000"
        app:layout_constraintTop_toBottomOf="@id/botton_filtrar"/>
    <TextView
        android:id="@+id/text_view_salario_mas_8000"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="+8000"
        android:background="@drawable/roundedlayoutblanco"
        android:fontFamily="@font/fileskool"
        android:gravity="center"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/text_view_salario_5000_8000"
        app:layout_constraintTop_toBottomOf="@id/botton_filtrar"/>
    <TextView
        android:id="@+id/text_view_horario"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:background="@drawable/roundedlayoutverde"
        android:fontFamily="@font/fileskool"
        android:gravity="center"
        android:text="Horario:"
        android:textColor="@color/white"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/text_view_salario"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_busqueda"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_horario_9"
        app:layout_constraintBottom_toTopOf="@id/barra_de_abajo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_pantalla_busqueda"
                android:layout_width="match_parent"
                android:layout_height="481dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>





    <LinearLayout
        android:id="@+id/barra_de_abajo"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@color/beige_claro"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/icono_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/house_svgrepo_com"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/icono_buscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/magnifier_svgrepo_com"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/icono_trabajos_postulados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/arrow_left_arrow_right_svgrepo_com"
            app:tint="@color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
