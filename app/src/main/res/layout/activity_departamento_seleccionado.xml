<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pantalla_departamento_seleccionado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:padding="16dp"
    tools:context=".DepartamentoSeleccionadoActivity">

    <ImageView
        android:id="@+id/selecciona_departamento"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:src="@drawable/seleccionciudad"
        android:background="@android:color/transparent"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagen_departamento"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/selecciona_departamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/cochabamba" />


    <Button
        android:id="@+id/boton_siguiente"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:text="Siguiente"
        android:textSize="20sp"
        android:backgroundTint="@color/azul"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/imagen_departamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
