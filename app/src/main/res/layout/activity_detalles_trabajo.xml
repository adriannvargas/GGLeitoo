<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallesTrabajoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="9"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:background="@color/beige">

            <ImageView
                android:layout_width="252dp"
                android:layout_height="99dp"
                android:src="@drawable/empleabol"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>
            <ImageView
                android:id="@+id/image_view_perfil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person_button_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2">

            </ImageView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_padre"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.3"
            android:background="@color/beige">

            <ImageView
                android:id="@+id/image_view_confirmacion_postulacion"
                android:layout_width="250dp"
                android:layout_height="350dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.3"
                android:visibility="invisible"
                android:src="@drawable/imagenpostulacion"
                >

            </ImageView>

            <Button
                android:id="@+id/boton_confirmacion_postulacion"
                android:layout_width="180dp"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.85"
                android:text="IR AL INICIO"
                android:backgroundTint="@color/beige_claro"
                android:visibility="invisible">

            </Button>
            <Button
                android:id="@+id/boton_eliminar_postulacion"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.85"
                android:text="ELIMINAR POSTULACION"
                android:backgroundTint="@color/beige_claro"
                android:visibility="gone"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_padre2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="@id/constraint_padre"
                app:layout_constraintEnd_toEndOf="@id/constraint_padre"
                app:layout_constraintStart_toStartOf="@id/constraint_padre"
                android:background="@color/beige_claro">

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/text_view_puesto_trabajo"
                    android:layout_width="160dp"
                    android:layout_height="90dp"
                    app:layout_constraintStart_toStartOf="@id/constraint_padre2"
                    app:layout_constraintTop_toTopOf="@id/constraint_padre2"
                    android:gravity="center"
                    android:background="@drawable/edittextbordesnegros"
                    android:fontFamily="@font/deluna">

                </TextView>

                <TextView
                    android:id="@+id/text_view_nombre_trabajo"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text_view_puesto_trabajo"
                    app:layout_constraintStart_toStartOf="@id/constraint_padre2"
                    android:textColor="@color/black"
                    android:background="@drawable/edittextbordesnegros"
                    android:gravity="center"
                    android:fontFamily="@font/deluna">

                </TextView>
                <TextView
                    android:id="@+id/text_view_salario"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text_view_nombre_trabajo"
                    app:layout_constraintStart_toStartOf="@id/constraint_padre2"
                    android:textColor="@color/black"
                    android:background="@drawable/edittextbordesnegros"
                    android:gravity="center"
                    android:fontFamily="@font/fileskool">

                </TextView>
                <TextView
                    android:id="@+id/text_view_descripcion"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text_view_salario"
                    app:layout_constraintStart_toStartOf="@id/constraint_padre2"
                    android:background="@drawable/edittextbordesnegros"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fileskool">

                </TextView>
                <TextView
                    android:id="@+id/text_view_horario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text_view_descripcion"
                    app:layout_constraintStart_toStartOf="@id/constraint_padre2"
                    android:background="@drawable/edittextbordesnegros"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="@font/fileskool">

                </TextView>
                <TextView
                    android:id="@+id/text_view_ubicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text_view_horario"
                    app:layout_constraintStart_toStartOf="@id/constraint_padre2"
                    android:background="@drawable/edittextbordesnegros"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="@font/fileskool">

                </TextView>
                <ImageView
                    android:id="@+id/image_view_trabajo"
                    android:layout_width="110dp"
                    android:layout_height="174dp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_padre2"
                    app:layout_constraintTop_toTopOf="@id/constraint_padre2"
                    android:background="@drawable/edittextbordesnegros"
                    >

                </ImageView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/boton_postular"
                android:layout_width="210dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@id/constraint_padre"
                app:layout_constraintTop_toTopOf="@id/constraint_padre"
                app:layout_constraintEnd_toEndOf="@id/constraint_padre"
                app:layout_constraintStart_toStartOf="@id/constraint_padre"
                app:layout_constraintVertical_bias="0.95"
                android:backgroundTint="@color/verde"
                android:text="POSTULAR">

            </Button>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/barra_de_abajo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/beige_claro"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <ImageView
                android:id="@+id/icono_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/house_svgrepo_com"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/icono_buscar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/magnifier_svgrepo_com"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/icono_trabajos_postulados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/arrow_left_arrow_right_svgrepo_com"
                app:tint="@color/black" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>