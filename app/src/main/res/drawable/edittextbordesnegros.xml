<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo verde -->
    <solid android:color="@color/beige_claro" /> <!-- Verde tipo Material Design -->

    <!-- Borde negro -->
    <stroke
        android:width="1.5dp"
        android:color="@color/white" />

    <!-- Sin bordes redondeados -->
    <corners android:radius="0dp" />

    <!-- Margen interno opcional -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
